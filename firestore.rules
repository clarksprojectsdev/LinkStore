rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Stores collection: users can read/write their own store
    match /stores/{userId} {
      // Allow read access to everyone (for public store pages)
      allow read: if true;
      
      // Allow write access only to authenticated users for their own store
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Products collection: users can read all, write their own
    match /products/{productId} {
      // Allow read access to everyone (for public store pages)
      allow read: if true;
      
      // Allow write access only to authenticated users who own the store
      // We check if the storeId in the product matches the user's store document
      allow create: if request.auth != null 
        && request.resource.data.storeId == request.auth.uid;
      
      allow update, delete: if request.auth != null 
        && resource.data.storeId == request.auth.uid;
    }
    
    // Users collection (if you have one)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
