rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to their own store folder
    match /stores/{userId}/{allPaths=**} {
      // Allow read access to everyone (for public store pages)
      allow read: if true;
      
      // Allow write access only to authenticated users for their own folder
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType.matches('image/.*');  // Only images
    }
    
    // Allow authenticated users to upload product images and videos
    match /products/{userId}/{allPaths=**} {
      // Allow read access to everyone (for public store pages)
      allow read: if true;
      
      // Allow write access only to authenticated users for their own folder
      // Support both images (max 10MB) and videos (max 50MB)
      allow write: if request.auth != null && request.auth.uid == userId
        && (
          (request.resource.contentType.matches('image/.*') && request.resource.size < 10 * 1024 * 1024) ||
          (request.resource.contentType.matches('video/.*') && request.resource.size < 50 * 1024 * 1024)
        );
    }
    
    // Allow authenticated users to upload product images in the alternative structure (products/{storeId}/{productId}/...)
    match /products/{storeId}/{productId}/{allPaths=**} {
      // Allow read access to everyone (for public store pages)
      allow read: if true;
      
      // Allow write access only to authenticated users who own the store
      // Note: This requires checking Firestore to verify store ownership
      // For now, we'll allow if authenticated (you can tighten this later)
      allow write: if request.auth != null && request.auth.uid == storeId
        && request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType.matches('image/.*');  // Only images
    }
  }
}
