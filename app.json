{
  "expo": {
    "name": "LinkStore",
    "slug": "linkstore",
    "version": "1.0.0",
    "scheme": "linkstore",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.olaitan.linkstore",
      "buildNumber": "1",
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take product photos for your store.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to select product images for your store.",
        "NSPhotoLibraryAddUsageDescription": "This app saves product images to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#28a745"
      },
      "package": "com.olaitan.linkstore",
      "versionCode": 7,
      "permissions": [
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "icon": "./assets/icon.png",
    "updates": {
      "enabled": true
    },
    "extra": {
      "eas": {
        "projectId": "9276290f-efa2-48c9-add7-09e88202a262"
      }
    },
    "plugins": [
      "expo-secure-store",
      "expo-router"
    ]
  }
}
