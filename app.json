{
  "expo": {
    "name": "LinkStore",
    "slug": "linkstore",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": true
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.olaitanclark9.linkstore",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to take product photos.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to select product images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.olaitanclark9.linkstore",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "description": "A professional store management app for vendors",
    "primaryColor": "#28a745",
    "owner": "olaitanclark9",
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "This app accesses your photos to let you share them with your customers.",
          "cameraPermission": "This app needs camera access to take product photos."
        }
      ],
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "9276290f-efa2-48c9-add7-09e88202a262"
      }
    }
  }
}
